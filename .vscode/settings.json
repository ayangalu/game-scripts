{
	"typescript.tsdk": "node_modules/typescript/lib",
	"html.customData": ["./node_modules/@shoelace-style/shoelace/dist/vscode.html-custom-data.json"],
	"[json][jsonc][javascript][typescript][css]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript][typescript]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		}
	},
	"inspectorHex.customDecoders": {
		"Final Fantasy X (US)": "./tools/games/ff10/decoders/us.decoder.ts",
		"Final Fantasy X (KR)": "./tools/games/ff10/decoders/kr.decoder.ts",
		"Final Fantasy X (CH)": "./tools/games/ff10/decoders/ch.decoder.ts",
		"Final Fantasy X (JP)": "./tools/games/ff10/decoders/jp.decoder.ts"
	},
	"inspectorHex.defaultDecoders": {
		"tools/games/ff10/source/**/new_jppc/battle/btl/**/*.bin": "Final Fantasy X (JP)",
		"tools/games/ff10/source/**/new_chpc/battle/btl/**/*.bin": "Final Fantasy X (CH)",
		"tools/games/ff10/source/**/new_krpc/battle/btl/**/*.bin": "Final Fantasy X (KR)",
		"tools/games/ff10/source/**/new_{us,de,it,fr,sp}pc/battle/btl/**/*.bin": "Final Fantasy X (US)"
	}
}
